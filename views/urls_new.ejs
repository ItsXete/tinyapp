<%- include('partials/_header', { user: user }) %>

<main class="container-box">
  <h1>Create TinyURL</h1>
  <form action="/urls" method="POST" style="text-align: center;">
    <input
      type="text"
      name="longURL"
      placeholder="http://"
      class="form-control"
      style="width: 300px; display: inline-block; margin-bottom: 20px;"
      required
    />
    <br />
    <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">
      Submit
    </button>
  </form>
</main>

<style>
  html, body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #f8f8f8;
  }
  .container-box {
    background: white;
    padding: 40px;
    margin: 40px auto;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    width: 90%;
    max-width: 800px;
  }
  h1 {
    text-align: center;
    margin-bottom: 20px;
  }
  input.form-control {
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  button.btn-primary {
    cursor: pointer;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    color: white;
  }
  button.btn-primary:hover {
    background-color: #0056b3;
  }
</style>
