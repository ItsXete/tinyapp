<%- include('partials/_header', { user: user }) %>

<!DOCTYPE html>
<html>
<head>
  <title>Edit URL</title>
  <!-- your styles here -->
</head>
<body>
  <main class="container-box">
    <h1>Edit URL</h1>
    <p style="text-align: center;">TinyURL for: <strong><%= longURL %></strong></p>
    <p style="text-align: center;">Short URL ID: <a href="/u/<%= id %>"><%= id %></a></p>

    <form action="/urls/<%= id %>" method="POST" style="text-align: center;">
      <input
        type="text"
        id="longURL"
        name="longURL"
        value="<%= longURL %>"
        placeholder="http://"
        class="form-control"
        style="width: 300px; display: inline-block; margin-bottom: 20px;"
        required
      />
      <br />
      <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">
        Update
      </button>
    </form>
  </main>

  <style>
    /* your existing styles here */
  </style>
</body>
</html>
