<h1>My URLs</h1>

<table>
  <thead>
    <tr>
      <th>Short URL</th>
      <th>Long URL</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for (const id in urlDatabase) { %>
      <tr>
        <td><%= id %></td>
        <td><%= urlDatabase[id] %></td>
        <td>
          <!-- View Link -->
          <a href="/urls/<%= id %>">View</a>

          <!-- Delete Form -->
          <form method="POST" action="/urls/<%= id %>/delete" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>